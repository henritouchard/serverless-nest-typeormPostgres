{
  "name": "serverless-nestjs-typeorm-crud",
  "version": "1.0.0",
  "description": "Example how to nestjs using the serverless framework with TypeORM",
  "keywords": [
    "nestjs",
    "mysql",
    "crud",
    "typeorm",
    "serverless",
    "lambda",
    "aws",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kop7/serverless-nestjs-typeorm"
  },
  "author": "Matija Kop",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --exec  \"sls offline\"",
    "clean": "rm -rf .build node_modules && npm install",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.3.1",
    "@nestjs/core": "^7.3.1",
    "@nestjs/platform-express": "^7.3.1",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/typeorm": "^7.1.0",
    "@nestjsx/crud": "^4.2.0",
    "@nestjsx/crud-request": "^4.2.0",
    "@nestjsx/crud-typeorm": "^4.2.0",
    "aws-serverless-express": "^3.3.5",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "mysql": "^2.17.1",
    "nestjs-config": "^1.4.4",
    "pg": "^8.2.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^3.0.2",
    "rxjs": "^6.2.2",
    "swagger-ui-express": "^4.0.7",
    "typeorm": "^0.2.18",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "^1.1.17",
    "@types/aws-lambda": "^8.10.15",
    "@types/aws-serverless-express": "^3.3.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.19",
    "@types/supertest": "^2.0.5",
    "jest": "^29.3.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "serverless-offline": "^6.4.0",
    "serverless-plugin-optimize": "^4.1.4-rc.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^6.1.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}